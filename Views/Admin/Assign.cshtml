@model LeaveManagement.ViewModels.AssignViewModel

@{
    var Users = Model.Users;
    var Managers = Model.Managers;
    ViewData["Title"] = "Assign";
}

<h1>Assign</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-items="@(new SelectList(Users, "Id", "FullName"))" class="form-control" asp-for="UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <select asp-items="@(new SelectList(Managers, "Id", "FullName"))" class="form-control" asp-for="ManagerId"></select>
                <span asp-validation-for="ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

